/* pages/major/major.wxss */
.sidebar {
  position: absolute;
  width: 25vw;
  height: 100vh;
  overflow-y: auto;
  overflow-x: hidden;
  float: left;
}
.sidebar-item {
  width: 25vw;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  font-size: 13px;
  background-color: #eee;
}
.activate {
  border-left: 5px solid lightseagreen;
  background-color: #ffffff;
}
.major {
  position: absolute;
  margin-left: 25vw;
  width: 75vw;
  height: 100vh;
  overflow-y: scroll;
  overflow-x: hidden;
  float: right;
}
.major-item {
  width: 75vw;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  font-size: 13px;
  background-color: #ffffff;
  border-bottom: 1px solid #eee
}
.container {
  position: relative;
}