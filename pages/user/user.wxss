/* pages/user/user.wxss */
.container {
  padding: 5%;
}
.userInfo {
  width: 100%;
  height: 150rpx;
  background-color: #eeeeee;
}
.userinfo_left {
  float: left;
  width: 20%;
  height: 100%;
  text-align: center;
}
.userinfo_avatar {
  width: 80%;
  height: 80%;
  margin: 10%;
  border-radius: 100%;
}
.userinfo_right {
  float: right;
  width: 80%;
  height: 100%;
}
.userinfo_name {
  font-weight: bold;
}
.userinfo_phone {
  position: absolute;
  font-size: 0.8rem;
  font-weight: bold;
  line-height: 1.2rem;
  color: grey;
  padding: 10rpx 0;
}
.cellBlock {
  box-shadow:0px 0px 10px rgb(236, 232, 232);
  border-radius: 8%;
}
.cell {
  border-radius: 8%;
}