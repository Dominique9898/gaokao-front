/* pages/school/allschool.wxss */
.col {
  height: 150rpx;
  position: relative;
}
.school_icon {
  padding: 20rpx;
  width: 110rpx;
  height: 110rpx;
  border-radius: 100%;
  position: absolute;
}
.school_icon > image {
  width: 100%;
  height: 100%;
  border-radius: 100%;
}
.school_desc {
  width:  400rpx;
  height: 150rpx;
  margin-left: 150rpx;
  position: absolute;
  padding-left: 10rpx;
}
.school_name {
  padding-top: 40rpx;
  font-size: 14px;
  font-weight: 500;
}
.school_location {
  font-size: 12px;
  color: lightgray;
}
.school_tag {
  width: 100rpx;
  font-size: 12px;
  padding-top: 40rpx;
  font-weight: 500;
  color: lightgray;
  position: absolute;
  right: 0;
}