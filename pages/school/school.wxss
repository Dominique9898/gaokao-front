.search_input {
  height: 8vh;
}
.container {
  padding: 0rpx 20rpx 10rpx 20rpx;
}
.top {
  height: 45vh;
}
.divider {
  width: 100%;
  height: 1vh;
  background-color: #eeeeee;
}
.zheyeImg {
  width: 100%;
  height: 100%;
  border-radius:2%
}
.menu_Items {
  display: flex;
	flex-flow: row wrap;
	justify-content: space-between;
  align-items: center;
  margin: 30rpx 30rpx 30rpx 30rpx;
}
.menu_Item, .school_item {
  display: inline-block;
}
.menu_image {
  width: 120rpx;
  height: 120rpx;
}
.menu_text {
  font-size: 0.8rem;
  text-align: center;
}
.school_content {
  padding: 30rpx 0;
  height: 100%;
  display: flex;
	flex-flow: row wrap;
	justify-content: space-between;
  align-items: center;
}
.school_item {
  width: 48%;
  height: 36vh;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  box-shadow:0 10rpx 15rpx 0 rgba(125,126,128,.16)
}
.school_image {
  width: 100%;
  height: 100%;
}
.school_labels {
  margin-top: 10rpx
}
.school_labels > van-tag:not(:first-child)	{
  margin-left: 10rpx;
}