/* pages/measurement/measurement.wxss */
.container {
  padding: 20rpx 20rpx 10rpx 20rpx;
}
.zheyeImg {
  width: 100%;
  height: 100%;
  border-radius:2%
}
.measurements {
  margin-left: 20rpx;
  display: flex;
	flex-flow: row wrap;
}
.measurement {
  width: 50%;
  height: 140rpx;
  font-size: 0.8rem;
  font-weight: 200;
  position: relative;
}
.measurement > .left {
  position: absolute;
  width: 70%;
}
.measurement > .right {
  position: absolute;
  width: 30%;
  margin-left: 70%;
}
.left > .title {
  padding-bottom: 20rpx;
}
.mainText {
  font-weight: 500;
  padding-bottom: 10rpx;
}
.subText {
  color: grey;
  font-size: 0.8rem;
  font-weight: 0.8rem;
}
.button {
  border-radius: 60rpx;
  width: 40rpx;
  height: 20rpx;
  line-height: 20rpx;
  text-align: center;
  padding: 5rpx 5rpx;
  color: white;
  background: #57cc86;
}
.result_btn {
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
  width:500rpx; 
  height:100rpx;
  line-height: 100rpx;
  color:white;
  border-radius: 60rpx;
  background-image: linear-gradient(to right, lightgreen, #57cc86, #42b983)
}